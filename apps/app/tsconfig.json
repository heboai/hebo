{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [ "./src/*" ],
      "@hebo/ui/*": ["../../packages/ui/src/*"],
      "@hebo/ui/components/*": ["../../packages/ui/src/components/*"],
      "@hebo/ui/lib/*": ["../../packages/ui/src/lib/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
