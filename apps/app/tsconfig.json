{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@hebo/shared-ui/*": ["../../packages/shared-ui/src/*"],
      "@hebo/aikit-ui/*": ["../../packages/aikit-ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/*/src/**/*"
  ],
  "exclude": ["node_modules"]
}
