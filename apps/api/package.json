{
  "name": "@hebo/api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --target=bun --outdir=dist",
    "dev": "bun --hot src/index.ts",
    "start": "bun -e \"import { existsSync } from 'fs'; if (!existsSync('dist/index.js')) { console.log('‚ùå Build not found. Please run \\'bun run build\\' first.'); process.exit(1); }\" && bun dist/index.js",
    "clean": "rimraf .next .turbo node_modules dist hebo.db"
  },
  "devDependencies": {
    "bun-types": "^1.2.19"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.3.0",
    "@elysiajs/jwt": "^1.3.2",
    "@hebo/db": "workspace:*",
    "elysia": "^1.3.8",
    "jose": "^5.3.0"
  }
}
