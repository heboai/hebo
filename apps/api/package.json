{
  "name": "@hebo/api",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build:js": "bun build src/index.ts --target=bun --outdir=dist",
    "build:types": "tsc -p tsconfig.types.json",
    "build": "bun run build:js && bun run build:types",
    "dev": "bun --hot src/index.ts | pino-pretty",
    "lint": "bunx eslint .",
    "start": "bun -e \"import { existsSync } from 'fs'; if (!existsSync('dist/index.js')) { console.log('‚ùå Build not found. Please run \\'bun run build\\' first.'); process.exit(1); }\" && bun dist/index.js",
    "clean": "rimraf .turbo node_modules dist"
  },
  "devDependencies": {
    "bun-types": "^1.2.19",
    "pino-pretty": "^13.1.1"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.3.1",
    "@hebo/db": "workspace:*",
    "@hebo/shared-auth": "workspace:*",
    "@hebo/shared-data": "workspace:*",
    "@sinclair/typebox": "^0.34.38",
    "crypto-random-string": "^5.0.0",
    "drizzle-orm": "^0.44.4",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.8",
    "slugify": "^1.6.6"
  }
}
