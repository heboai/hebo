{
  "name": "@hebo/api",
  "version": "0.0.1",
  "private": true,
  "sideEffects": false,
  "engines": {
    "bun": ">=1.2.21"
  },
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --compile --minify-whitespace --minify-syntax --target=bun --outfile dist/server",
    "clean": "git clean -fdx -e '.env*' .",
    "dev": "bun --hot src/index.ts | pino-pretty",
    "lint": "bunx eslint .",
    "type-check": "bunx tsc --noEmit",
    "prestart": "bun run build",
    "start": "./dist/server"
  },
  "dependencies": {
    "@bogeychan/elysia-logger": "^0.1.10",
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/swagger": "^1.3.1",
    "@hebo/db": "workspace:*",
    "@hebo/shared-api": "workspace:*",
    "@hebo/shared-data": "workspace:*",
    "@sinclair/typebox": "^0.34.38",
    "crypto-random-string": "^5.0.0",
    "drizzle-orm": "^0.44.5",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.3.20",
    "pg": "^8.16.3",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.7",
    "@types/pg": "^8.15.5",
    "bun-types": "^1.2.19",
    "pino-pretty": "^13.1.1"
  }
}
