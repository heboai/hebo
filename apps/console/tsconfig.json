{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@hebo/ui/*": ["../../packages/ui/src/*"],
      "@hebo/shared-data/*": ["../../packages/shared-data/json/*"]
    },
    "rootDirs": [".", "./.react-router/types"],
    "types": ["bun-types", "vite/client", "mdx"],
    "verbatimModuleSyntax": true
  },
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*",
    ".react-router/types/**/*"
  ]
}
