{
  "$id": "models.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["alias", "type"],
    "properties": {
      "alias": {
        "type": "string",
        "minLength": 1
      },
      "type": {
        "type": "string",
        "enum": {
          "$data": "./json/__supportedTypes.schema.json"
        }
      },
      "endpoint": {
        "type": "object",
        "additionalProperties": false,
        "required": ["baseUrl", "provider", "apiKey"],
        "properties": {
          "baseUrl": {
            "type": "string",
            "format": "uri"
          },
          "provider": {
            "enum": ["aws", "custom"]
          },
          "apiKey": {
            "type": "string",
            "minLength": 1,
            "writeOnly": true
          }
        }
      }
    }
  }
}
