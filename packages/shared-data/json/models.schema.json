{
  "$id": "models.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": ["alias", "type"],
    "properties": {
      "alias": {
        "type": "string",
        "minLength": 1
      },
      "type": {
        "type": "string"
      },
      "customRouting": {
        "type": "object",
        "additionalProperties": false,
        "required": ["provider"],
        "properties": {
          "baseUrl": {
            "type": "string",
            "format": "uri",
            "minLength": 1
          },
          "provider": {
            "type": "string",
            "enum": ["bedrock", "vertex", "voyage"]
          },
          "bedrock": {
            "type": "object",
            "additionalProperties": false,
            "required": ["accessKeyId", "secretAccessKey", "region"],
            "properties": {
              "accessKeyId": {
                "type": "string",
                "minLength": 1
              },
              "secretAccessKey": {
                "type": "string",
                "minLength": 1
              },
              "region": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          "vertex": {
            "type": "object",
            "additionalProperties": false,
            "required": ["serviceAccount", "location", "project"],
            "properties": {
              "serviceAccount": {
                "type": "string",
                "minLength": 1
              },
              "location": {
                "type": "string",
                "minLength": 1
              },
              "project": {
                "type": "string",
                "minLength": 1
              }
            }
          },
          "voyage": {
            "type": "object",
            "additionalProperties": false,
            "required": ["apiKey"],
            "properties": {
              "apiKey": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    }
  }
}
