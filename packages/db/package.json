{
  "name": "@hebo/db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/drizzle.d.ts",
      "default": "./dist/drizzle.js"
    },
    "./schema/agents": {
      "types": "./dist/schema/agents.d.ts",
      "default": "./dist/schema/agents.js"
    },
    "./schema/branches": {
      "types": "./dist/schema/branches.d.ts",
      "default": "./dist/schema/branches.js"
    },
    "./utils/with-audit": {
      "types": "./dist/utils/with-audit.d.ts",
      "default": "./dist/utils/with-audit.js"
    }
  },
  "scripts": {
    "build:types": "tsc -p tsconfig.types.json",
    "build:js": "tsc -p tsconfig.build.json",
    "build": "bun run build:js && bun run build:types",
    "clean": "rimraf .turbo node_modules ../hebo.db",
    "lint": "bunx eslint .",
    "migrate": "drizzle-kit migrate",
    "generate": "drizzle-kit generate",
    "studio": "drizzle-kit studio",
    "check": "drizzle-kit check"
  },
  "dependencies": {
    "@libsql/client": "^0.15.9",
    "pg": "^8.16.3"
  },
  "peerDependencies": {
    "drizzle-orm": "^0.44.4"
  },
  "devDependencies": {
    "@electric-sql/pglite": "^0.3.7",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4"
  }
}
