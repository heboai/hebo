// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../src/generated/prismabox"
  additionalProperties        = false
}

model agents {
  /// @prismabox.hide
  id   String @id @default(uuid(7)) @db.Uuid
  /// @prismabox.input.hide
  slug String @unique
  name String

  // Common audit fields across entities
  /// @prismabox.hide
  created_by String
  /// @prismabox.hide
  created_at DateTime   @default(now())
  /// @prismabox.hide
  updated_by String
  /// @prismabox.hide
  updated_at DateTime   @updatedAt
  /// @prismabox.hide
  deleted_by String?
  /// @prismabox.hide
  deleted_at DateTime?
  /// @prismabox.input.hide
  branches   branches[]
}

model branches {
  /// @prismabox.hide
  id         String @id @default(uuid(7)) @db.Uuid
  /// @prismabox.input.hide
  slug       String
  /// @prismabox.hide
  agent_slug String
  name       String
  // FUTURE: hide api_key from models
  models     Json[] @default([])

  // Common audit fields across entities
  /// @prismabox.hide
  created_by String
  /// @prismabox.hide
  created_at DateTime  @default(now())
  /// @prismabox.hide
  updated_by String
  /// @prismabox.hide
  updated_at DateTime  @updatedAt
  /// @prismabox.hide
  deleted_by String?
  /// @prismabox.hide
  deleted_at DateTime?
  /// @prismabox.hide
  agent      agents    @relation(fields: [agent_slug], references: [slug], onDelete: Cascade)

  @@index([agent_slug, slug])
}
