// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client"
  output     = "../src/generated/prisma"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator prismabox {
  provider                    = "prismabox"
  typeboxImportDependencyName = "elysia"
  typeboxImportVariableName   = "t"
  inputModel                  = true
  output                      = "../src/generated/prismabox"
}

model Agents {
  /// @prismabox.hide
  id         String     @id @default(uuid()) @db.Uuid
  /// @prismabox.input.hide
  slug       String     @unique
  name       String
  // audit fields
  /// @prismabox.hide
  created_by String
  /// @prismabox.hide
  created_at DateTime   @default(now()) @db.Timestamp(3)
  /// @prismabox.hide
  updated_by String
  /// @prismabox.hide
  updated_at DateTime   @updatedAt
  /// @prismabox.hide
  deleted_by String?
  /// @prismabox.hide
  deleted_at DateTime?  @db.Timestamp(3)
  /// @prismabox.input.hide
  branches   Branches[]
}

model Branches {
  /// @prismabox.hide
  id         String    @id @default(uuid()) @db.Uuid
  /// @prismabox.input.hide
  slug       String
  /// @prismabox.hide
  agent_slug String
  name       String
  models     Json[]    @default([])
  // audit fields
  /// @prismabox.hide
  created_by String
  /// @prismabox.hide
  created_at DateTime  @default(now()) @db.Timestamp(3)
  /// @prismabox.hide
  updated_by String
  /// @prismabox.hide
  updated_at DateTime  @updatedAt
  /// @prismabox.hide
  deleted_by String?
  /// @prismabox.hide
  deleted_at DateTime? @db.Timestamp(3)
  /// @prismabox.hide
  agents     Agents    @relation(fields: [agent_slug], references: [slug], onDelete: Cascade)

  @@index([agent_slug, slug])
}
