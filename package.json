{
  "name": "hebo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "npm-run-all clean:workspaces clean:root",
    "clean:workspaces": "turbo run clean",
    "clean:root": "rimraf .next .turbo node_modules",
    "db:generate": "bun --filter @hebo/db exec drizzle-kit generate",
    "db:migrate": "bun --filter @hebo/db exec drizzle-kit migrate",
    "db:push": "bun --filter @hebo/db exec drizzle-kit push",
    "db:studio": "bun --filter @hebo/db exec drizzle-kit studio",
    "deploy": "sst deploy",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:deps": "check-dependency-version-consistency .",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.4.4",
    "check-dependency-version-consistency": "^5.0.1",
    "eslint-config-next": "^15.4.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "sst": "^3.17.10",
    "turbo": "^2.5.5"
  },
  "engines": {
    "bun": ">=1.2.19"
  }
}
