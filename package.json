{
  "name": "hebo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -fdX -e \".env*\"",
    "db:generate": "bun run --filter @hebo/db generate",
    "db:migrate": "bun run --filter @hebo/db migrate",
    "db:studio": "bun run --filter @hebo/db studio",
    "db:check": "bun run --filter @hebo/db check",
    "deploy": "sst deploy",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write .",
    "format:staged": "prettier --write",
    "lint": "turbo run lint",
    "lint:deps": "check-dependency-version-consistency .",
    "lint:staged": "bun eslint --cache --fix",
    "postinstall": "lefthook install",
    "test": "turbo run test",
    "sst": "sst",
    "sst:synth": "sst install"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "check-dependency-version-consistency": "^5.0.1",
    "eslint": "^9.33.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "eslint-plugin-turbo": "^2.5.5",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lefthook": "^1.12.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.12",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  },
  "engines": {
    "bun": ">=1.2.21"
  }
}