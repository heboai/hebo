{
  "name": "hebo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "npm-run-all clean:workspaces clean:root",
    "clean:workspaces": "turbo run clean",
    "clean:root": "rimraf .next .turbo node_modules",
    "db:generate": "pnpm --filter @hebo/db exec drizzle-kit generate",
    "db:migrate": "pnpm --filter @hebo/db exec drizzle-kit migrate",
    "db:push": "pnpm --filter @hebo/db exec drizzle-kit push",
    "db:studio": "pnpm --filter @hebo/db exec drizzle-kit studio",
    "deploy": "sst deploy",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:deps": "check-dependency-version-consistency .",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@changesets/cli": "*",
    "@hebo/db": "workspace:*",
    "@hebo/ui": "workspace:*",
    "check-dependency-version-consistency": "*",
    "cross-env": "*",
    "eslint": "9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "3.3.2",
    "rimraf": "*",
    "sst": "3.0.37",
    "turbo": "2.5.5",
    "typescript": "5.5.3"
  },
  "engines": {
    "bun": ">=1.2.18",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "overrides": {
      "@stackframe/react": "2.8.21",
      "@types/react": "19.0.0",
      "@types/react-dom": "19.0.0",
      "@typescript-eslint/eslint-plugin": "8.10.0",
      "@typescript-eslint/parser": "8.10.0",
      "buffer": "6.0.3",
      "class-variance-authority": "0.7.1",
      "clsx": "2.1.1",
      "drizzle-kit": "0.22.8",
      "drizzle-orm": "0.31.2",
      "eslint": "9.5.0",
      "eslint-plugin-import": "2.29.1",
      "eslint-plugin-jsx-a11y": "6.9.0",
      "eslint-plugin-react": "7.35.0",
      "eslint-plugin-react-hooks": "5.2.0",
      "lucide-react": "0.525.0",
      "hono": "4.5.0",
      "next": "15.4.3",
      "prettier": "3.3.2",
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "sst": "3.0.37",
      "tailwindcss": "4.1.11",
      "tailwind-merge": "3.3.1",
      "turbo": "2.5.5",
      "tsup": "8.5.0",
      "typescript": "5.5.3"
    }
  }
}
