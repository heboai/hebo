{
  "name": "hebo",
  "version": "0.0.3",
  "private": true,
  "packageManager": "bun@1.2.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "git clean -fdx -e '.env*'",
    "db": "bun run --filter @hebo/database db",
    "db:migrate": "bun run db migrate dev",
    "db:reset": "bun run db migrate reset --force",
    "db:start": "docker start hebo-postgres 2>/dev/null || docker run -d --name hebo-postgres -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=password -e POSTGRES_DB=local -p 5432:5432 -v \"$(pwd)/packages/database/.local-storage/postgres:/var/lib/postgresql/data\" postgres:17.5",
    "db:stop": "docker stop hebo-postgres 2>/dev/null || true",
    "db:wait": "until docker exec hebo-postgres pg_isready -U postgres -d local -h localhost >/dev/null 2>&1; do sleep 0.5; done",
    "predev": "bun run db:start && bun run db:wait && bun run db:migrate",
    "dev": "turbo run dev --parallel'",
    "format": "prettier --write .",
    "format:staged": "prettier --write",
    "lint": "turbo run lint",
    "lint:deps": "check-dependency-version-consistency .",
    "lint:staged": "eslint --cache --fix",
    "postinstall": "lefthook install && bun run db generate",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "check-dependency-version-consistency": "^5.0.1",
    "eslint": "^9.33.0",
    "eslint-config-flat-gitignore": "^2.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-perf": "^3.3.3",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "eslint-plugin-tailwindcss": "^4.0.0-beta.0",
    "eslint-plugin-turbo": "^2.5.6",
    "eslint-plugin-unicorn": "^60.0.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lefthook": "^1.12.2",
    "prettier": "^3.6.2",
    "sst": "^3.17.14",
    "tailwindcss": "^4.1.12",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0"
  },
  "engines": {
    "bun": ">=1.2.22"
  }
}