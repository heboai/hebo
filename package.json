{
  "name": "hebo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "bun@1.2.19",
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "npm-run-all2 clean:workspaces clean:root",
    "clean:workspaces": "turbo run clean",
    "clean:root": "rimraf .next .turbo node_modules",
    "db:generate": "bun run --filter @hebo/db generate",
    "db:migrate": "bun run --filter @hebo/db migrate",
    "db:studio": "bun run --filter @hebo/db studio",
    "db:check": "bun run --filter @hebo/db check",
    "deploy": "sst deploy",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write .",
    "format:staged": "prettier --write",
    "lint": "turbo run lint",
    "lint:deps": "check-dependency-version-consistency .",
    "lint:staged": "bunx eslint --cache --fix",
    "postinstall": "lefthook install",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@next/eslint-plugin-next": "^15.4.4",
    "check-dependency-version-consistency": "^5.0.1",
    "eslint": "^9.32.0",
    "eslint-config-next": "^15.4.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "lefthook": "^1.12.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "serve": "^14.2.4",
    "sst": "^3.17.10",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.2.19"
  }
}
